#!/bin/bash

set -euo pipefail

TEMPFILEC=$(mktemp -q --suffix=.cpp)
TEMPFILEE=$(mktemp -q)
trap "rm -f \"$TEMPFILEC\" \"$TEMPFILEE\"" EXIT

cat << EOF > "$TEMPFILEC"
#include <stdio.h>
#include <iostream>
#include <numeric>
#include <regex>
#include <math.h>
#include <limits.h>
#include <string.h>

int main() {
$@
return 0;
}
EOF

g++ -std=c++17 -lm "$TEMPFILEC" -o "$TEMPFILEE"
"$TEMPFILEE"

